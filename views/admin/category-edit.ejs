<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>
    
    <%- include("../partials/nav")  %> 

    <%- include('../partials/navAdmin') %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <form method="post" action="">

                    <input type="hidden" name="categoryid" value="<%= category.id %>">
                    <div class="row mb-3">
                        <label for="baslik" class="col-sm-2 col-form-label"> Başlık: </label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                          <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                    
                    <br> <br> <br>
                    
                    <div class="row mb-3">
                        <div class="col-sm-8">
                            <p> Kategoriye Ait Blog Adedi: <strong><%= countBlog %></strong></p>
                        </div>
                    </div>

                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width: 50px;">id</th>
                                <th style="width: 130px;">resim</th>
                                <th>baslik</th>
                                <th style="width: 130px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% blogs.forEach(blog => { %>
                                <tr>
                                    <td> #<%= blog.id %> </td>
                                    <td>
                                        <img src="/static/images/<%= blog.resim %>" alt="" class="img-fluid">
                                    </td>
                                    <td>
                                        <a href="/blogs/<%= blog.id %>"> <%= blog.baslik %> </a>
                                    </td>
                                    <td>
                                        <form action="/admin/category/remove" method="post">
                                            <input type="hidden" name="blogid" value="<%= blog.id %>">
                                            <input type="hidden" name="categoryid" value="<%= category.id %>">
                                            <button class="btn btn-sm btn-danger" type="submit">Kategoriden Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                </form>
            </div>
        </div>
    </div>
    
</body>
</html>



