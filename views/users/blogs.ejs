<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <!-- Navigation -->
    <%- include('../partials/nav') %>
    
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <!-- category menu -->
                <%- include('../partials/category-menu', categories, selectedCategory) %> 
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3">
                    <%= title %>
                </h1>

                <% if (blogs.length == 0) { %>
                    <div class="alert alert-warning"> Blog BulunamadÄ± </div>
                <% } else { %>
                    <% blogs.forEach(blog => { %>
                        <%- include('../partials/blog-card', { blog: blog }) %>
                    <% }) %>
                <% } %>

                <!-- pagination -->
                <%- include('../partials/pagination') %>
            </div>
        </div>
    </div>

</body>
</html>
