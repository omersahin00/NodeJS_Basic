<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <!-- Navigation -->
    <%- include('../partials/nav') %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">

                <!-- menu -->
                <%- include('../partials/category-menu', categories) %>
                
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3">
                    <%= title %>
                </h1>

                <% blogs.forEach(element => { %>
                        <%- include('../partials/blog-card', element) %>
                <% }) %>

                <!-- pagination -->
                <%- include('../partials/pagination') %>

            </div>
        </div>
    </div>


</body>
</html>
